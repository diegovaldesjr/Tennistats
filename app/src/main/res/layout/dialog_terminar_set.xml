<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_padding">

    <EditText
        android:id="@+id/puntajej"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_puntajej"
        android:inputType="number"
        android:maxLines="1" />

    <EditText
        android:id="@+id/puntajeo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_puntajeo"
        android:inputType="number"
        android:maxLines="1" />

    <Spinner
        android:id="@+id/spinnerGanador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_light"
        android:entries="@array/dropdown_ganador"
        android:padding="@dimen/spinner_padding"
        android:layout_marginTop="@dimen/edittext_margin"/>

</LinearLayout>